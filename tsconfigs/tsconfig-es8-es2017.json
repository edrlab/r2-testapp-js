{
  "extends": "./tsconfig-common",
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../dist/es8-es2017/",
    "lib": [
      "dom",
      "es2015",
      "dom.iterable"
    ],
    "paths": {
      "@opds/*": [
        "node_modules/r2-opds-js/dist/es8-es2017/src/opds/*"
      ],
      "@r2-opds-js/*": [
        "node_modules/r2-opds-js/dist/es8-es2017/src/*"
      ],
      "@utils/*": [
        "node_modules/r2-utils-js/dist/es8-es2017/src/_utils/*"
      ],
      "@r2-utils-js/*": [
        "node_modules/r2-utils-js/dist/es8-es2017/src/*"
      ],
      "@parser/*": [
        "node_modules/r2-shared-js/dist/es8-es2017/src/parser/*"
      ],
      "@models/*": [
        "node_modules/r2-shared-js/dist/es8-es2017/src/models/*"
      ],
      "@transform/*": [
        "node_modules/r2-shared-js/dist/es8-es2017/src/transform/*"
      ],
      "@r2-shared-js/*": [
        "node_modules/r2-shared-js/dist/es8-es2017/src/*"
      ],
      "@r2-streamer-js/*": [
        "node_modules/r2-streamer-js/dist/es8-es2017/src/*"
      ],
      "@r2-lcp-js/*": [
        "node_modules/r2-lcp-js/dist/es8-es2017/src/*"
      ],
      "@r2-navigator-js/*": [
        "node_modules/r2-navigator-js/dist/es8-es2017/src/*"
      ]
    }
  }
}
